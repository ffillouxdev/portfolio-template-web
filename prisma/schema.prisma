// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
}

model Experience {
  id       Int     @id @default(autoincrement())
  title    String
  date     String
  skills   Json
  desc     String
  link     String?
  jobTitle String
}

model Project {
  id        Int      @id @default(autoincrement())
  title     String
  desc      String
  link      String
  screens   Json
  skills    Json
  date     String   @default("aucune")
  whichCase WhichCase
}

enum WhichCase {
  Studies
  Internship
  Job
}

model Article {
  id              Int      @id @default(autoincrement())
  title           String
  categorie       String
  date            String   @default("aucune")
  readTimeMinutes Int
  likes           Int      @default(0)
  views           Int      @default(0)
  descs           Json
  comments        Json
  screens         Json
}